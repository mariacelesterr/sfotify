@import "normalize.styl"//iconos de icomoon @import "fonts.styl"gris_oscuro = #333333gris_claro = #818181rojo = #BD255Bgris_mas_claro = #F0F0F0a 	//para quitar la __ de los articule (a)	text-decoration nonebody	font-size 16px	font-family 'Varela Round', sans-seriffigure 	margin 0img 	//para cuando tines una imagen y un texto 		//y lo quieres unir 	vertical-align top ul 	margin 0	padding 0//buttons.button-menu	color gris_oscuro	left .5em	margin-top -10px	position absolute	top 50%  .container	font-size 0	padding 1.4rem	text-align center//oocss classes.action	color white	font-size 1.2em	margin-right .5em	&:last-child		margin-right 0	&.gray		color gris_oscuro.actions	background rgba(black, .3)	bottom 0 // para ponerlos abajo	left 0	position absolute	right 0.border-bottom	border-bottom 1px solid gris_claro  .name	color gris_oscuro.menu	display none .relative	position relative.author	color gris_claro//para centrar a todos los que tienen margin 0  .center-block	margin 0 auto//para centrar los texto y los iconos.center-text	text-align center .right   margin 1em 0 -text 	text-align right.relative	position relative .padding	padding 1em.padding-tb	padding 1em 0 .left	float left.right	float right.wrap	width 1000px.round //para reondear un avatar 	border-radius 50%	overflow hidden.progress	position relative	.min	.max		font-size .8em		position absolute		top -5px	.min 		left 0 	.max 		right 0  	.total 		background gris_claro		border-radius 5px		height 5px		width 75%		margin 0 auto 	.state		background rojo		border-radius 5px		height 5px		width 30%		position relative	.circle		background gris_oscuro 		border-radius 50%		height 10px		width 10px		position absolute		right 0		top -2px	.header	height 3.5em	//a	// display none 	.title		font-size 1.1em		line-height 3.5em		margin 0		text-align center.song 	display inline-block	font-size 1rem	margin-bottom 1em	margin-right 1em	text-align left	width 8em 	&:nth-child(even)		margin-right 0	p		margin .5em 0.playing	&.small //. porque es una segunda clase		width 20em		margin 0 auto@media screen and (min-width:480px)	.song		&:nth-child(even)			margin-right 1em	.image		img 			width 100%			height auto    	.playing		&.medium			width auto.input	border 1px solid gris_claro	height 2.5em	border-radius 5px	padding 0 1em 0 2em .search-icon	position absolute	left .5em	top .8em	color gris_claro.close-icon 	position absolute	top .5em	color gris_claro	right .5em	font-size 1.2em@media screen and (min-width:1000px)		body 		background gris_mas_claro			.button-menu		display none //para quitar el boton de menu 	.menu		display block		background gris_mas_claro		overflow hidden		.item			float left			list-style none //para quitar los botones que trae por defecto 			a				color gris_oscuro				cursor pointer //para que cambia el cursor a la manito				display block				padding 1em					text-transform uppercase // para poner todo el texto en mayusculas 				border-top 5px solid transparent				&:hover					border-top 5px solid gris_claro	.header		height auto		.title			display none	.isotipo		width 122px	.logo 		padding 1.3em 0 		overflow hidden // para ocultar ciertos rastros del float 		background white 	.avatar		width 28px		height 28px	.username		color gris_claro		position relative		top 9px		margin-right .5em		//seudo elemento &before &after		&:after			border-left 7px solid transparent			border-right 7px solid transparent			border-top 9px solid gris_claro			content ""			display inline-block 			margin-left .4em						