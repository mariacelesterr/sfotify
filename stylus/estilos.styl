@import "normalize.styl"//iconos de icomoon @import "fonts.styl"gris_oscuro = #333333gris_claro = #818181rojo = #BD255Ba 	//para quitar la __ de los articule (a)	text-decoration nonebody	font-size 16px	font-family 'Varela Round', sans-seriffigure 	margin 0img 	vertical-align top //buttons.button-menu	color gris_oscuro	left .5em	margin-top -10px	position absolute	top 50%	.container	font-size 0	padding 1.4rem	text-align center//oocss classes.action	color white	font-size 1.2em	margin-right .5em	&:last-child		margin-right 0	&.gray		color gris_oscuro.actions	background rgba(black, .3)	bottom 0 // para ponerlos abajo	left 0	position absolute	right 0.border-bottom	border-bottom 1px solid gris_claro	.name	color gris_oscuro.menu	display none .relative	position relative.author	color gris_claro//para centrar a todos los que tienen margin 0	.center-block	margin 0 auto//para centrar los texto y los iconos.center-text	text-align center .right-text 	text-align right.relative	position relative .padding	padding 1em.padding-tb	padding 1em 0 .progress	margin 1em 0 	position relative	.min	.max		font-size .8em		position absolute		top -5px	.min 		left 0 	.max 		right 0 		.total 		background gris_claro		border-radius 5px		height 5px		width 75%		margin 0 auto 	.state		background rojo		border-radius 5px		height 5px		width 30%		position relative	.circle		background gris_oscuro 		border-radius 50%		height 10px		width 10px		position absolute		right 0		top -2px	.header	height 3.5em	//a	//	display none 	.title		font-size 1.1em		line-height 3.5em		margin 0		text-align center.song 	display inline-block	font-size 1rem	margin-bottom 1em	margin-right 1em	text-align left	width 8em 	&:nth-child(even)		margin-right 0	p		margin .5em 0.playing	&.small //. porque es una segunda clase		width 20em		margin 0 auto